<%- include("partials/header.ejs") %>
<a href="/compose" class="btn btn-outline-warning">Create post</a>
<% if(arr.length > 0) { %>
    <% arr.forEach((item, index) => { %>
        <div class="col-md-6">
            <h1 class="display-6 fw-bold lh-lg font-monospace"><%= item.title %></h1>
            <h6 class="lead lh-base"><%= item.author %></h6>
            <p>
                <%= item.content.substring(0, 100) %>
                <a href="/posts/<%= item.title %>">read more...</a>
            </p>
            <p class="badge bg-secondary fst-italic fw-light"><%= item.date %></p>
        </div>
   <% }) %>
<% } %>

<%- include("partials/footer.ejs") %>